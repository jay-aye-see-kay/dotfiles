snippet f "function" b
fun ${1:function_name}($2)
	${3:" code}
endf
endsnippet

snippet if "if" b
if ${1:condition}
	${2:" code}
endif
endsnippet

snippet ife "if-else" b
if ${1:condition}
	${2:" code}
else
	${3:" code}
endif
endsnippet

snippet au "autocommand" b
autocmd ${1}
endsnippet

snippet ag "autogroup" b
augroup ${1:group_name}
	autocmd!
	autocmd ${2}
augroup end
endsnippet
