### Variables
set $alt Mod1
set $ctl Control
set $mod Mod4
# Home row direction keys
set $left h
set $down j
set $up k
set $right l
# Preferred apps
set $term alacritty
set $alt_term termite
set $menu 'rofi -show'
set $browser firefox
set $private_browser firefox --private-window

### Output configuration
output * bg $HOME/Pictures/wallpaper.jpg fill
# Laptop
output eDP-1 scale 1.5
output eDP-1 pos 640 1440 res 2560x1440
# Home 27"
output HDMI-A-1 pos 640 0 res 2560x1440
# single 24" 16:10
# output HDMI-A-1 pos 640 240 res 1920x1200 
# CC 2x 24"
output "Dell Inc. DELL U2412M HC55P1CL2C0L" pos 0 240 res 1920x1200
output "Dell Inc. DELL U2412M HC55P2592CAL" pos 1920 240 res 1920x1200

# redshift
exec redshift

# titlebar
font pango:Fira Mono 10
titlebar_border_thickness 0
titlebar_padding 6 2

# gaps
smart_gaps on
gaps inner 12
